@model CrmSample.EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}
 <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Yeni Category</h1>

<form method="post">
    <label>Kategori Adı</label>
    <input type="text" asp-for="CategoryName" class="form-control"/> <br />

     <label>Kategori Açıklaması</label>
    <input type="text" asp-for="CategoryDescription" class="form-control"/>  <br />

    <button class="btn btn-primary">Categori Ekle</button>
</form>

